{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-console": ["warn"]
  },
  "overrides": [
    {
      "files": ["public/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["src/server.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
